<h1>Téléchargez les photos Instagram</h1>

<%= form_with url: download_path, method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :username, "Nom d'utilisateur Instagram" %>
    <%= form.text_field :username, class: "form-control" %>
  </div>

  <%= form.submit "Télécharger les photos", class: "btn btn-primary" %>
<% end %>

<% if flash[:alert] %>
  <div class="alert alert-warning">
    <%= flash[:alert] %>
  </div>
<% end %>
